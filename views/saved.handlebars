<div class="container">

    {{#each article}}
    <div class=col-md-12>
        <h1><a href="{{this.link}}" target="_blank">
                {{this.title}}</a> </h1>
        <p>{{this.description}}</p>
        <form action="/unsave" method="POST">
            <input name="_id" value="{{_id}}" type="hidden" />
            <button type="submit" class="btn btn-default">Delete</button>
        </form>
        <button type="button" class="btn btn-default saved-buttons" data-toggle="modal" data-value="{{_id}}"
            data-target="#noteModal">Add
            Notes</button>
    </div>
    {{/each}}

    <div id="noteModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="noteModalLabel">Note for: </h5>
                    <div>
                        <ul id="notesBody">

                        </ul>
                    </div>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleTextarea">Enter New Note</label>
                        <textarea class="form-control" id="notestext" rows="3"></textarea>
                    </div>
                    <div>
                        <!--enter saved notes here-->
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" id="saveButton" class="btn btn-primary savenote">Save changes</button>

                </div>
            </div>
        </div>
    </div>
</div>{{!-- /container div --}}